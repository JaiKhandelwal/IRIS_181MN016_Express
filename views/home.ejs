<!DOCTYPE html>
<html>
    <head>
        <title>Auction House</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/home.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    </head>
    <body>
    
    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to Auction House</h1>
		<a href="/products" class="btn btn-lg btn-success" id="aboveForm">View All Products</a>
		<form action="/products" method="GET" class="form-inline" id="form-main">
               <div class="form-group col-md-offset">
                   <input type="text" name="search" placeholder="Search products" class="form-control">
                   <input type="submit" value="Search" class="btn btn-default">
               </div>
           </form>
		</div>
		
    
    <ul class="slideshow">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>

