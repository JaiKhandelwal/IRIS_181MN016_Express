<%- include("../partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div>
			<h1>
				Welcome to Auction House
    		</h1>
			<p>
				Here you can find all the products
			</p>
			<a href="/products/new" class="btn btn-primary btn-lg">Add a new product</a>
		</div>
    </header>
	<div class="row" style="display:flex; flex-wrap:wrap">
         <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <p>
            	<form action="/products" method="GET" class="form-inline">
            		<div class="form-group">
            			<input type="text" name="search" placeholder="Search products" class="form-control">
            			<input type="submit" value="Search" class="btn btn-default">
            		</div>
            	</form>
            </p>
             <% } %>
         </div>
			<% product.forEach(function(product){ %>
		<div class="col-md-3 col-sm-6">
			<div class="img-thumbnail">
				<image src="<%= product.image %>" width="100%"></image>
				<div class="caption" style="text-align:center">
					<strong><%= product.name %></strong>
				</div>
				<div class="caption">
					<strong>Deadline: </strong><em><%= product.deadline %></em>
				</div>
				<p>
					<a href="/products/<%= product.id %>" class="btn btn-xs btn-primary" style="text-align:center">More info</a>
				</p>
			</div>
		</div>
		<% }) %>
	</div>
</div>
<%- include("../partials/footer") %>	