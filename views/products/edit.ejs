<%- include("../partials/header") %>
<h1 style="text-align: center">
	Edit <%= product.name %>
</h1>
<div class="container" style="width:30%; margin:25px auto;">
<form action="/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<input class="form-control" type="text" name="product[name]" value="<%= product.name %>">
	</div>
	<div class="form-group">
		<input class="form-control" type="text" name="product[description]" value="<%= product.description %>">
	</div>
	<div class="form-group">
		<input class="form-control" type="number" name="product[startingBid]" value="<%= product.startingBid %>" min="0.01" step="100.00">
	</div>
	<div class="form-group">
		<input class="form-control" type="text" name="product[deadline]" value="<%= product.deadline %>">
	</div>
	<div class="form-group">
		<input class="form-control" type="text" name="product[contact]" value="<%= product.contact %>">
	</div>
	<div class="form-group">
		<button class="btn-lg btn-primary">
			Submit
		</button>
	</div>
</form>
	<a href="/camps">Go back to see all products</a>
</div>
<%- include("../partials/footer") %>