<%- include("../partials/header") %>
<h1 style="text-align: center">
	Add a new bid to <%= product.name %>
</h1>
<div class="container" style="width:30%; margin:25px auto;">
<form action="/products/<%= product._id %>/bids" method="POST">
	<div class="form-group">
		<input class="form-control" type="number" name="bid[bid]" placeholder="bid">
	</div>
	<div class="form-group">
		<button class="btn-lg btn-primary">
			Submit
		</button>
	</div>
</form>
	<a href="/camps">Go back to see products</a>
</div>
<%- include("../partials/footer") %>